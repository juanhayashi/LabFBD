<h1>Listing mensajes</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= mensaje.fecha %></td>
        <td><%= mensaje.texto %></td>
        <td><%= link_to 'Show', mensaje %></td>
        <td><%= link_to 'Edit', edit_mensaje_path(mensaje) %></td>
        <td><%= link_to 'Destroy', mensaje, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mensaje', new_mensaje_path %>
